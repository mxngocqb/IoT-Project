                "driver_id",
                "driver_license"
            ],
            "properties": {
                "driver_id": {
                    "type": "integer"
                },
                "driver_license": {
                    "type": "string"
                },
                "driver_name": {
                    "type": "string"
                },
                "home_town": {
                    "type": "string"
                }
            }
        }
    }
